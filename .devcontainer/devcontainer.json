{
    "dockerFile": "dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "eamodio.gitlens",
                "GitHub.vscode-pull-request-github",
                "mhutchie.git-graph",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
            ],
        }
    },
    "runArgs": [
        "--privileged",
    ],
    "remoteEnv": {
        // Enforce an absolute path for ccache.
        "CCACHE_DIR" : "${containerWorkspaceFolder}/.ccache/",
        // Increase ccache cache size.
        "CCACHE_MAXSIZE" : "15G",
    },
    // Git security fix: see also https://github.com/actions/checkout/issues/766
    "onCreateCommand": "git config --global --add safe.directory $PWD",
}
